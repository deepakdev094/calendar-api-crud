<body>
  <center>
    <h1>Create new entry</h1>
    <br><br>
    <%= form_with(model: [User.first, @entry], url: user_entries_path(User.first), method: :post) do |form| %>
      <div class="form-group">
        <%= form.label :Summary, class: 'form-label' %><br>
        <%= form.text_field :summary, class: 'form-control', placeholder: 'Enter summary...' %>
      </div>
      <div class="form-group">
        <%= form.label :Description, class: 'form-label' %><br>
        <%= form.text_area :description, class: 'form-control', placeholder: 'Enter description...' %>
      </div>
      <div class="form-group">
        <%= form.label :Start_time, class: 'form-label' %><br>
        <%= form.datetime_field :start_time, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :End_time, class: 'form-label' %><br>
        <%= form.datetime_field :end_time, class: 'form-control' %>
      </div>
      <br><br>
      <%= form.submit 'Create Entry', class: 'btn btn-primary' %>
    <% end %>
    <%= link_to 'Back', root_path, class: 'back-btn' %>
  </center>
    <link rel="stylesheet" type="text/css" href="entries.css">
</body>